<?xml version="1.0" encoding="ASCII"?>
<project>

  <property name="version"
            value="1.0"/>

  <property name="jar"
            value="build/parsers-${version}.jar"/>

  <path id="classpath">
    <pathelement location="${jar}"/>
    <pathelement location="lib/jsoup-1.8.2.jar"/>
  </path>

  <target name="clean">
    <delete dir="build"/>
  </target>

  <target name="jar">
    <mkdir dir="build/classes"/>
    <javac debug="yes"
           debuglevel="source,lines,vars"
           destdir="build/classes"
           includeantruntime="false">
      <compilerarg value="-Xlint:all"/>
      <classpath refid="classpath"/>
      <src path="src/"/>
    </javac>
    <jar destfile="${jar}">
      <fileset dir="build/classes"
               includes="**/*.class"/>
    </jar>
  </target>

  <property name="from.dir" location="${work.dir}/raw-export"/>
  <property name="to.dir" location="${work.dir}/cleaned-export"/>
  <property name="sitemap" location="${to.dir}/sitemap.txt"/>

  <target name="-dir-check">
    <fail unless="work.dir">use -Dwork.dir=/something to define working dir (ie: /something/raw-export, /something/cleaned-export, etc...</fail>
    <fail message="Raw export dir does not exist: ${from.dir}">
      <condition>
        <not>
          <available file="${from.dir}" />
        </not>
      </condition>
    </fail>
  </target>
  
  <target name="map"
          depends="-dir-check,jar">
    <mkdir dir="${to.dir}"/>
    <java classname="com.lucidworks.docparser.GetSiteMap"
          fork="true">
      <classpath refid="classpath"/>
      <arg value ="${from.dir}"/>
      <arg value ="${to.dir}"/>
    </java>
  </target>

  <target name="scrape"
          depends="-dir-check,jar">
    <mkdir dir="${to.dir}"/>
    <java classname="com.lucidworks.docparser.ScrapeConfluence"
          fork="true">
      <classpath refid="classpath"/>
      <arg value ="${from.dir}"/>
      <arg value ="${to.dir}"/>
    </java>
  </target>

  <target name="hier"
          depends="-dir-check,jar">
    <mkdir dir="${to.dir}"/>
    <java classname="com.lucidworks.docparser.ScrapeConfluenceHierarchy"
          fork="true">
      <classpath refid="classpath"/>
      <arg value ="${from.dir}"/>
      <arg value ="${to.dir}"/>
      <arg value ="${sitemap}"/>
    </java>
  </target>

</project>
